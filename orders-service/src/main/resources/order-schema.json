{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://globalbooks.com/schemas/orders.create.v1.json",
  "type": "object",
  "required": ["customerId", "items", "shippingAddress"],
  "properties": {
    "customerId": { "type": "string" },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["isbn", "quantity", "unitPrice", "currency"]
      }
    },
    "shippingAddress": {
      "type": "object",
      "required": ["line1", "city", "country", "postalCode"]
    }
  },
  "additionalProperties": false
}
